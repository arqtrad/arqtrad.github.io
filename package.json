{
	"name": "arqtrad",
	"version": "1.0.0",
	"description": "Document√°rio da arquitetura tradicional luso-brasileira",
	"keywords": [
		"portal",
		"galeria",
		"base de dados",
		"arquitetura tradicional"
	],
	"author": "Pedro P. Palazzo",
	"license": "CC_BY-SA",
	"repository": "arqtrad/arqtrad.github.io",
	"main": "index.js",
	"scripts": {
		"11ty": "npx @11ty/eleventy",
		"dev": "npx @11ty/eleventy --serve",
		"css": "npm-run-all css-compile css-prefix",
		"css-compile": "sass --style compressed --source-map --embed-sources --no-error-css --load-path=node_modules tools/scss/:tools/assets/css/",
		"css-lint": "stylelint tools/scss/",
		"css-prefix": "postcss --replace tools/assets/css/main.css --use autoprefixer --map",
		"watch": "nodemon --delay 3 -e html,scss -x \"npm run css\"",
		"start": "npm-run-all --parallel watch dev",
		"build": "npm-run-all css 11ty",
		"test": "npm-run-all css-lint css"
	},
	"dependencies": {
		"@popperjs/core": "^2.11.8",
		"bootstrap": "^5.3.3"
	},
	"devDependencies": {
		"@11ty/eleventy": "^3.1.2",
		"@11ty/eleventy-fetch": "^4.0.0",
		"@11ty/eleventy-img": "^3.1.8",
		"@11ty/eleventy-plugin-rss": "^1.2.0",
		"@knight-lab/timelinejs": "^3.9.8",
		"autoprefixer": "^10.4.22",
		"bootstrap-icons": "^1.13.1",
		"country-code-emoji": "^2.3.0",
		"csv-parse": "^6.1.0",
		"jquery": "^3.7.1",
		"js-yaml": "^4.1.1",
		"leaflet": "^1.9.4",
		"luxon": "^3.7.2",
		"node-pandoc": "^0.3.0",
		"nodemon": "^3.1.11",
		"npm-run-all": "^4.1.5",
		"pagefind": "^1.4.0",
		"path": "^0.12.7",
		"popper": "^1.0.1",
		"postcss": "^8.5.6",
		"postcss-cli": "^11.0.1",
		"sass": "^1.94.1",
		"sharp": "^0.34.5",
		"stylelint": "^16.25.0",
		"stylelint-config-twbs-bootstrap": "^16.1.0"
	}
}
